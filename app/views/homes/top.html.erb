<main>
  <div class="container">
    <div class="row">
      <div class="p-4 mx-auto">
        <div class="main-visual d-flex align-items-center justify-content-center">
          <h3 class="mx-auto my-5 text-center text-dark">
            Takeout
          </h3>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-md-1">
      </div>
      <div class="col-md-10 p-5 text-center">
        <h4><strong>新着投稿</strong></h4>
        <div class="row">
          <% @posts.each do |post| %>
            <div class="col-3">
              <div class="card">
                <%= link_to post_path(post.id) do %>
                  <%= attachment_image_tag post, :image, size: "160x130", fallback: "no-image.jpg", class: "card-img-top" %>
                <% end %>
                <div class="card-body">
                  <h6 class="card-title"><strong><%= post.title %></strong></h6>
                  <p class="card-text"><%= post.body %></p>
                </div>
              </div>
            </div>
          <% end %>
          <div class="col-md-12 p-5 text-right">
            <%= link_to "全ての投稿を見る>>", posts_path, class: "btn btn-info btn-sm btn-block" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</main>
