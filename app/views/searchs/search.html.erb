<div class="container">
  <div class="row">
    <div class="col-9">

      <% if @posts %>
      <div>
        <h2>投稿検索結果</h2>

        <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to post_path (post.id) do %>
                <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no-image.jpg", size:"120x80" %>
                <% end %>
              </td>
              <td>
                <%= link_to post_path (post.id) do %>
                <h5><b><%= post.title %></b></h5>
                <% end %>
              </td>
              <td>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <% end %>

      <% if @users %>
      <div>
        <h2>ユーザー検索結果</h2>

        <table class="table table-hover">
          <thead class="thead-dark">
            <tr>
              <th></th>
              <th></th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @users.each do |user| %>
            <tr>
              <td class= col-4>
                <%= link_to user_path (user.id) do %>
                <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback:"no-image.jpg", size:'80x60' %>
                <% end %>
              </td>
              <td class= col-4>
                <%= link_to user_path (user.id) do %>
                <h4><b><%= user.name %></b></h4>
                <% end %>
              </td>
              </td>
            </tr>
          <% end %>
          </tbody>
        </table>
      </div>
      <% end %>

    </div>
  </div>
</div>