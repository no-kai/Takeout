<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% users.each do |user| %>
      <tr>
        <td class= col-4>
          <%= link_to user_path (user.id) do %>
          <%= attachment_image_tag user, :profile_image, :fill, 50, 50, fallback:"no-image.jpg", size:'80x60' %>
          <% end %>
        </td>
        <td class= col-4>
          <%= link_to user_path (user.id) do %>
          <h4><b><%= user.name %></b></h4>
          <% end %>
        </td>
        <td class= col-4>
          <%= link_to user_path (user.id) do %>
          <h4><b>ユーザー詳細</b></h4>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>