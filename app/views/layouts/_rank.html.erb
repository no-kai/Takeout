<table class="table table-hover">
  <thead class="bg-dark text-white">
    <tr>
      <th colspan="4">RANKING</th>
    </tr>
  </thead>

  <tbody>
    <% all_ranks.each.with_index(1) do |post, i| %>
    <tr>
      <td>
        <%= i %>位
      </td>
      <td>
        <%= link_to post_path (post.id) do %>
        <strong><%= post.title %></strong>
        <% end %>
      </td>
      <td>
        ☆<%= post.favorites.count %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
