<table class="table table-hover">
  <thead class="bg-dark text-white">
    <tr>
      <th colspan="3">RANKING</th>
    </tr>
  </thead>

  <tbody>
    <% all_ranks.each.with_index(1) do |post, i| %>
    <tr>
      <td>
        <%= i %>位
      </td>
      <td>
        <%= post.title %>
      </td>
      <td>
        ☆<%= post.favorites.count %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
