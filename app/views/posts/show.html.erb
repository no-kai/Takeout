<div class="container">
  <div class="row">
    <div class="col-md-9">
      <%= link_to post_path (@post.id) do %>
      <%= attachment_image_tag @post, :image, :fill, 100, 100, fallback: "no-image.jpg", size:'600x500'  %>
      <% end %>
      <h1><span><%= @post.title %></span></h1>
      <h5>コメント</h5>
      <h4><%= @post.body %></h4>
      <h3>
        <span>
          投稿者:
          <%= link_to user_path (@user.id) do %>
          <%= @user.name %>
          <% end %>
        </span>
      </h3>
    </div>

    <div class="col-md-2 offset-md-1">
      <%= link_to '新規投稿をする',new_post_path %>
    </div>
  </div>
</div>