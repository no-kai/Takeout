<div class="container">
  <div class="row">
    <div class="col-md-8 p-4 text-center bg-light ">
      <%= link_to post_path (@post.id) do %>
        <%= attachment_image_tag @post, :image, fallback: "no-image.jpg", size:'650x450'  %>
      <% end %>
      <div class="">
        <h1 class="p-3"><span>【<%= @post.title %>】</span></h1>

        <h4 class="p-2"><%= @post.body %></h4>
        <h4 class="p-2">店名:〔<%= @post.shop %>〕</h4>
        <h4 class="p-2">場所:<%= @post.prefectures %></h4>
        <h3>
          <span>
            【投稿者:
            <%= link_to user_path (@post.user.id) do %>
            <%= @post.user.name %>
            <% end %>】
          </span>
        </h3>
        <br>

        <div class="favorites_buttons_<%= @post.id %>">
          <h3><%= render "favorites/favorite", post: @post, favorite: @favorite %></h3>
        </div>

        <div id="comments_<%= @post.id %>">
          <%= render 'comments/index', post: @post %>
        </div>
        <div>
          <%= render 'comments/form', post: @post, comment: @comment %>
        </div>
      </div>
    </div>

    <div class="col-3 offset-1 p-4 text-center bg-white">
      <%= link_to '新規投稿をする',new_post_path, class: "btn btn-info btn-sm btn-block" %>
      <br><br>
      <%= render "layouts/rank", all_ranks: @all_ranks %>
    </div>
  </div>
</div>