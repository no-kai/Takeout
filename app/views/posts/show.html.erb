<div class="container">
  <div class="row">
    <div class="col-8 p-4 text-center bg-light ">
      <%= link_to post_path (@post.id) do %>
        <%= attachment_image_tag @post, :image, fallback: "no-image.jpg", size:'600x500'  %>
      <% end %>
      <div class="p-4">
        <h1><span>【<%= @post.title %>】</span></h1>
        <h3>
          <span>
            【投稿者:<%= @post.user.name %>】
          </span>
        </h3>
        <h4><%= @post.body %></h4>

        <h4>場所:<%= @post.prefectures %></h4>
        <br>

        <div class="favorites_buttons_<%= @post.id %>">
          <%= render "favorites/favorite", post: @post, favorite: @favorite %>
        </div>

        <div id="comments_<%= @post.id %>">
          <%= render 'comments/index', post: @post %>
        </div>
        <div>
          <%= render 'comments/form', post: @post, comment: @comment %>
        </div>
      </div>
    </div>

    <div class="col-3 offset-1 p-4 text-center bg-white">
      <%= link_to '新規投稿をする',new_post_path, class: "btn btn-info btn-sm btn-block" %>
      <br><br>
      <%= render "layouts/rank", all_ranks: @all_ranks %>
    </div>
  </div>
</div>