<table class="table table-hover">
  <thead class="thead-dark">
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td class= "col-3">
          <%= link_to post_path (post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 100, 100, fallback: "no-image.jpg", size:'120x80'  %>
          <% end %>
        </td>
        <td>
          <%= link_to post_path (post.id) do %>
          <h5><b><%= post.title %></b></h5>
          <% end %>
        </td>
        <td>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

