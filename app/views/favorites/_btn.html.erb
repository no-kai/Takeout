
      <% if post.favorited_by?(current_user) %>
        <p class="btn btn-info ">
          <%= link_to post_favorite_path(post),method: :delete, remote: true do %>
            ★<%= post.favorites.count %> いいね
          <% end %>
        </p>
        <% else %>
        <p class="btn btn-info ">
          <%= link_to post_favorites_path(post),method: :post, remote: true do %>
            ☆<%= post.favorites.count %> いいね
          <% end %>
        </p>
      <% end %>